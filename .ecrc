# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2
max_line_length = off

[*.md]
indent_size = unset
max_line_length = off
trim_trailing_whitespace = false

[*.py]
max_line_length = 88

[*.sh]
indent_size = 2

[*.tf]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
max_line_length = off

[Jenkinsfile]
max_line_length = unset

[Makefile]
indent_style = tab
max_line_length = 160
